<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lanchonete.funcionario.post.DoceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/btnDoceVoltar"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:contentDescription="@string/imagem"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/titulo_doce"
            android:layout_width="180dp"
            android:layout_height="61dp"
            android:layout_marginStart="98dp"
            android:layout_marginTop="15dp"
            android:text="@string/doces"
            android:textColor="#2F5022"
            android:textColorHint="#6CEA3A"
            android:textSize="48sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nome_doceInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            app:errorEnabled="true"
            app:helperText="Campos Importantes"
            app:helperTextTextColor="@color/blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nome_doce"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:hint="@string/nome"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/valor_doceInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="24dp"
            app:errorEnabled="true"
            app:helperText="Campos Importantes"
            app:helperTextTextColor="@color/blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/valor_doce"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:hint="@string/valor"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descricao_doceInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            android:gravity="start|top"
            app:errorEnabled="true"
            app:helperText="Campos Importantes"
            app:helperTextTextColor="@color/blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/descricao_doce"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="@string/descricao"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:id="@+id/radioDoce"
            android:layout_width="match_parent"
            android:layout_height="435dp"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/imageButtonPudim"
                android:layout_width="135dp"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/pudim" />

            <RadioButton
                android:id="@+id/radioButtonPudim"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="84dp"
                android:onClick="checkButtonDoce"
                android:text="@string/link_pudim" />

            <ImageButton
                android:id="@+id/imageButtonBolo"
                android:layout_width="135dp"
                android:layout_height="150dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="-180dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/bolo" />

            <RadioButton
                android:id="@+id/radioButtonBolo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="255dp"
                android:onClick="checkButtonDoce"
                android:text="@string/link_bolo" />

            <ImageButton
                android:id="@+id/imageButtonDonuts"
                android:layout_width="135dp"
                android:layout_height="150dp"
                android:layout_marginStart="130dp"
                android:layout_marginTop="40dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/donuts" />

            <RadioButton
                android:id="@+id/radioButtonDonuts"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="184dp"
                android:onClick="checkButtonDoce"
                android:text="@string/link_donuts" />

        </RadioGroup>

        <Button
            android:id="@+id/botao_doce"
            android:layout_width="320dp"
            android:layout_height="49dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="35dp"
            android:backgroundTint="@color/green_foward"
            android:text="@string/cadastrar" />

    </LinearLayout>


</ScrollView>


