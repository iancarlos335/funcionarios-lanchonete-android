<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".funcionario.MenuFuncionario">

    <Button
        android:id="@+id/btnMenuFuncionario"
        android:layout_width="161dp"
        android:layout_height="68dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="96dp"
        android:backgroundTint="@color/black"
        android:text="@string/funcionario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuPedidos" />

    <Button
        android:id="@+id/btnMenuPedidos"
        android:layout_width="149dp"
        android:layout_height="70dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="104dp"
        android:backgroundTint="@color/black"
        android:text="@string/pedidos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuDoce" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="138dp"
        android:layout_height="41dp"

        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:text="@string/produtos"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/btnMenuBebidas"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMenuDoce"
        android:layout_width="90dp"
        android:layout_height="63dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/black"
        android:text="@string/doces"
        app:layout_constraintEnd_toStartOf="@+id/btnMenuSalgados"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMenuSalgados"
        android:layout_width="119dp"
        android:layout_height="53dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/black"
        android:text="@string/salgados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMenuBebidas"
        android:layout_width="101dp"
        android:layout_height="67dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/black"
        android:text="@string/bebidas"
        app:layout_constraintEnd_toStartOf="@+id/btnMenuDoce"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="116dp"
        android:layout_height="51dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Listas"
        android:textColor="@color/black"
        android:textSize="38sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>